<Window x:Class="Website_Reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Website_Reader"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel Name="dkpForm">
            <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Bottom" DockPanel.Dock="Top" HorizontalAlignment="Center">
                <TextBlock Text="Website URL: " />
                <TextBox Name="txtURL" Width="250" VerticalAlignment="Top" />                
            </StackPanel>

            <Button Name="btnLoadHTML" Content="Load Page" Click="btnLoadHTML_Click" DockPanel.Dock="Bottom" Padding="5" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
        </DockPanel>
                   
    </Grid>
</Window>
